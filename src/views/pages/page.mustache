{{>partials/header}}

{{#banner}}

<section class="banner" style="background-image: url('/images/{{background}}')">{{tittle}}</section>
<h2>{{tittle}} disponiveis para Adoção </h2>

{{/banner}}

<div class="container list">
    {{#list}}
        <div class="item">
            <img src="images/{{image}}" class="item--image"/>
            <div class="item--name">{{name}}</div>
            <div class="item--color">Cor:{{color}}</div>
            <div class="item--genre">Gênero:{{sex}}</div>
        </div>
    {{/list}}
</div>

{{>partials/footer}}